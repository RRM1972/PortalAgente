@model LoyalIGWEB.Models.PerfilAgente
@{
    ViewBag.Title = "Dashboard Principal de Agentes";
    ViewBag.pTitle = "Perfil de Agente";
    ViewBag.pageTitle = "dashboard";
    Layout = "~/Views/Shared/Layouts/_layout_horizontal.cshtml";
}

@section styles{
    <link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-lg-6">
        <div class="card bg-dark">
            <div>
                <h4 class="text-center text-white">Demo</h4>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div>Demo</div>
                <div>@Model.DatosAgente.FechaNacimiento.ToString("MM/dd/yyyy")</div>
                <div>@Model.DatosAgente.Celular</div>
                <div>@Model.DatosAgente.Telefono</div>
                <div>@Model.DatosAgente.TelefonoCasa</div>
                <div>democorreo@gmail.com</div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div>Direccion Oficina Provincia Ciudad C.P. 00000</div>
                <div>Direccion Postal Provincia Ciudad C.P. 00000</div>
                <div>Direccion Domicilio Provincia Ciudad C.P. 00000</div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div>BANCO 001</div>
                <div>Cuenta : 066666</div>
                <div>Titular Cuenta</div>
            </div>
        </div>

    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    Agentes
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-dark">
                            <tr>
                                <td>Agente</td>
                                <td>Polizas</td>
                                <td>Primas</td>
                                <td>Objetivo</td>
                                <td>Propia</td>
                                <td>Master</td>
                            </tr>
                        </thead>
                        @foreach (var oListaAgente in Model.ListaAgentes)
                        {
                            <tr>
                                <td>Agente @oListaAgente.CodigoAgente</td>
                                <td>@oListaAgente.Polizas.ToString("###,###,###")</td>
                                <td>@oListaAgente.Primas.ToString("$###,###,###")</td>
                                <td>
                                    <div class="progress progress-xl">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @oListaAgente.AvanceObjetivo.ToString("##%")" aria-valuenow="121767" aria-valuemin="0" aria-valuemax="121767"></div>
                                    </div>
                                    <div>@oListaAgente.AvanceObjetivo.ToString("##%")</div>
                                </td>
                                <td>@oListaAgente.ComisionPropia.ToString("$###,###,###")</td>
                                <td>@oListaAgente.ComisionMaster.ToString("$###,###,###")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

        </div>
 
    </div>
</div>
